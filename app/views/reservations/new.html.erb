<h1>New Reservation</h1>

<%= form_with model: @reservation do |form| %>
  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date%>
    <% @reservation.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
