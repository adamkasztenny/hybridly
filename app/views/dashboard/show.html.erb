<%= button_to 'Reserve time in the office', new_reservations_path, method: :get %>

<h2> <%= format_reservation_policy_count(@reservation_policy.office_limit) %> </h2>

<% if @user.has_role?(:admin) %>
  <%= button_to 'Update reservation policy', new_reservation_policies_path, method: :get %>
<% end %>

<h2> <%= format_spots_remaining(@spots_remaining_for_today) %> </h2>

<%= month_calendar(attribute: :first, events: @reservations_per_day) do |date, reservations_per_day| %>
  <%= date %>

  <% reservations_per_day.each do |_, count| %>
    <div>
      <%= link_to format_reservation_count(count), "#{reservations_path}/#{date}" %>
    </div>
  <% end %>
<% end %>
